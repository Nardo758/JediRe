# ========================================
# JediRe - Replit Environment Variables
# ========================================
# Copy this to .env and fill in your values

# ========================================
# DATABASE (Required)
# ========================================
# Automatically set by Replit when you add PostgreSQL database
DATABASE_URL=postgresql://user:password@host:5432/dbname

# ========================================
# BACKEND CONFIGURATION
# ========================================
NODE_ENV=production
PORT=4000
API_VERSION=v1

# JWT Authentication
JWT_SECRET=change-this-to-a-long-random-secret-string
JWT_EXPIRES_IN=7d

# CORS (use * for development, specific domain for production)
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info

# WebSocket
WS_CORS_ORIGIN=*

# ========================================
# EXTERNAL APIs (Optional)
# ========================================

# Mapbox - For map visualization
# Get free token at: https://mapbox.com
MAPBOX_TOKEN=

# LLM / AI Services - Choose ONE provider
# ========================================

# Option 1: Anthropic Claude (recommended for property analysis)
# Get API key at: https://console.anthropic.com
CLAUDE_API_KEY=
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Option 2: OpenAI GPT-4
# Get API key at: https://platform.openai.com
# OPENAI_API_KEY=
# OPENAI_MODEL=gpt-4-turbo-preview

# Option 3: OpenRouter (multi-model gateway - supports 100+ models)
# Get API key at: https://openrouter.ai
# OPENROUTER_API_KEY=
# OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# Qwen AI (Multimodal AI for development intelligence)
# Get HuggingFace token at: https://huggingface.co/settings/tokens
HF_TOKEN=
QWEN_MODEL=Qwen/Qwen2.5-72B-Instruct
QWEN_BASE_URL=https://router.huggingface.co/v1

# Google Maps (Optional)
GOOGLE_MAPS_API_KEY=

# ========================================
# SUPPLY AGENT CONFIGURATION
# ========================================

# Markets to analyze (semicolon-separated)
# Format: "City, STATE;City, STATE;..."
MARKETS=Austin, TX;Denver, CO;Phoenix, AZ;Miami, FL;Seattle, WA

# Agent run frequency (minutes)
AGENT_RUN_INTERVAL_MINUTES=60

# Data collection
USE_MOCK_DATA=true
ENABLE_ZILLOW=false
ENABLE_REDFIN=false

# AI insights (requires CLAUDE_API_KEY)
ENABLE_AI_INSIGHTS=false

# ========================================
# FRONTEND CONFIGURATION
# ========================================

# API endpoint (relative path for Replit proxy)
VITE_API_URL=/api/v1
VITE_WS_URL=

# Mapbox token (same as above)
VITE_MAPBOX_TOKEN=

# Feature flags
VITE_ENABLE_MAPS=true
VITE_ENABLE_WEBSOCKET=true

# ========================================
# ADVANCED SETTINGS
# ========================================

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database pool
DB_POOL_MIN=2
DB_POOL_MAX=10

# ========================================
# DEVELOPMENT ONLY
# ========================================
# Uncomment for local development

# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=jedire
# DB_USER=postgres
# DB_PASSWORD=postgres
