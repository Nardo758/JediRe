# JEDI RE Backend - Environment Variables Template
# Copy this file to .env and fill in real values
# NEVER commit .env file to git!

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3001
API_VERSION=v1
APP_NAME=JEDI-RE
APP_VERSION=1.0.0

# ============================================
# DATABASE (REQUIRED)
# ============================================
DATABASE_URL=postgresql://username:password@localhost:5432/jedire_db
DB_POOL_MIN=2
DB_POOL_MAX=20

# ============================================
# JWT SECRETS (REQUIRED - CHANGE THESE!)
# ============================================
# IMPORTANT: Use strong, random strings (32+ characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-CHANGE-THIS-TO-RANDOM-STRING
JWT_REFRESH_SECRET=your-refresh-token-secret-CHANGE-THIS-TO-RANDOM-STRING
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# FRONTEND & CORS (REQUIRED)
# ============================================
FRONTEND_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173
# Production: Comma-separated list
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================
# REDIS (OPTIONAL)
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# GOOGLE SERVICES (OPTIONAL)
# ============================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ============================================
# MAPBOX (OPTIONAL)
# ============================================
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token

# ============================================
# REGRID PROPERTY DATA (OPTIONAL)
# ============================================
REGRID_API_KEY=your_regrid_api_key

# ============================================
# AI / LLM PROVIDERS (OPTIONAL)
# ============================================
# Claude (Anthropic)
CLAUDE_API_KEY=your_claude_api_key
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# OpenAI
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview

# Hugging Face
HF_TOKEN=your_huggingface_token

# ============================================
# MICROSOFT OAUTH (OPTIONAL)
# ============================================
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_TENANT_ID=common
MICROSOFT_REDIRECT_URI=http://localhost:3001/api/v1/auth/microsoft/callback

# ============================================
# EXTERNAL API KEYS (OPTIONAL)
# ============================================
API_KEY_APARTMENT_LOCATOR=your_apartment_locator_api_key

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
STRICT_RATE_LIMIT_WINDOW_MS=60000
STRICT_RATE_LIMIT_MAX_REQUESTS=10

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FILE=logs/jedire.log

# ============================================
# WEBSOCKET
# ============================================
WS_CORS_ORIGIN=http://localhost:3000
WS_PING_INTERVAL=25000
WS_PING_TIMEOUT=20000

# ============================================
# PRODUCTION EXAMPLE (commented out)
# ============================================
# NODE_ENV=production
# ALLOWED_ORIGINS=https://jedire.com,https://www.jedire.com
# FRONTEND_URL=https://jedire.com
# DATABASE_URL=postgresql://prod_user:prod_pass@prod-db.example.com:5432/jedire_prod
# JWT_SECRET=<64-char-random-hex-string>
# JWT_REFRESH_SECRET=<different-64-char-random-hex-string>
