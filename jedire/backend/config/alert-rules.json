        {
          "type": "imbalance_change",
          "threshold": 60,
          "condition": "above"
        },
        {
          "type": "opportunity_score",
          "threshold": 6.5,
          "condition": "above"
        },
        {
          "type": "vacancy_high",
          "threshold": 10,
          "condition": "above"
        },
        {
          "type": "rent_spike",
          "threshold": 5,
          "condition": "change"
        }
      ]
    },
    "market_watcher": {
      "name": "Market Watcher",
