# JediRe Backend - Replit Configuration
# Copy to .env and fill in your values

NODE_ENV=production
PORT=4000
API_VERSION=v1

# Database (use Replit PostgreSQL database URL)
DATABASE_URL=${DATABASE_URL}

# JWT Authentication
JWT_SECRET=change-this-to-a-random-secret-key
JWT_EXPIRES_IN=7d

# External APIs (optional - get free keys)
GOOGLE_MAPS_API_KEY=
MAPBOX_ACCESS_TOKEN=
CLAUDE_API_KEY=

# CORS (Replit dev domain)
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info

# WebSocket
WS_CORS_ORIGIN=*
