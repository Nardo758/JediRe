# ================================
# JEDI RE - Environment Configuration
# ================================
# Copy this file to .env.local and fill in your values

# ================================
# API Configuration
# ================================
VITE_API_BASE_URL=http://localhost:3000
VITE_API_TIMEOUT=30000

# ================================
# WebSocket Configuration
# ================================
VITE_WS_URL=ws://localhost:3000/ws
VITE_WS_RECONNECT_INTERVAL=5000

# ================================
# Mapbox Token (Required for Map View)
# ================================
# Get your token at: https://account.mapbox.com/access-tokens/
VITE_MAPBOX_TOKEN=pk.eyJ1IjoieW91ci11c2VybmFtZSIsImEiOiJjbHh4eHh4eHgifQ.xxxxxxxxxxxxxxxxxx

# ================================
# OpenAI / Claude Configuration (for AI Agent)
# ================================
VITE_OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
VITE_ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ================================
# Feature Flags
# ================================
VITE_ENABLE_AI_AGENT=true
VITE_ENABLE_MAP_VIEW=true
VITE_ENABLE_OPUS_CHAT=true
VITE_ENABLE_REALTIME_UPDATES=true

# ================================
# External Services
# ================================
# Analytics
VITE_ANALYTICS_ID=UA-XXXXXXXXX-X
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Error Tracking (Sentry)
VITE_SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx

# ================================
# Authentication
# ================================
VITE_AUTH_DOMAIN=your-tenant.auth0.com
VITE_AUTH_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxx
VITE_AUTH_AUDIENCE=https://api.jedire.com

# ================================
# Data & Mocking
# ================================
VITE_USE_MOCK_DATA=false
VITE_MOCK_DELAY_MS=500

# ================================
# Premium Features
# ================================
VITE_PREMIUM_TIER=pro
VITE_MAX_DEALS=100
VITE_MAX_PROPERTIES_PER_DEAL=50

# ================================
# Developer Options
# ================================
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info
VITE_SHOW_DEV_TOOLS=true
