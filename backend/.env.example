# Server Configuration
NODE_ENV=development
PORT=4000
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/jedire
DB_HOST=localhost
DB_PORT=5432
DB_NAME=jedire
DB_USER=postgres
DB_PASSWORD=your_password
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration (for caching & sessions)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=30d

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
# App login OAuth callback (passport Google auth route)
GOOGLE_AUTH_CALLBACK_URL=http://localhost:4000/api/v1/auth/google/callback
# Gmail sync OAuth callback (Gmail integration route)
GOOGLE_GMAIL_CALLBACK_URL=http://localhost:4000/api/v1/gmail/callback
# Legacy fallback (optional). Prefer provider-specific callback vars above.
GOOGLE_CALLBACK_URL=

# External APIs
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
MAPBOX_ACCESS_TOKEN=your-mapbox-token
REGRID_API_KEY=your-regrid-api-key

# LLM / AI Services
# Choose ONE of the following providers:
# Option 1: Anthropic Claude (recommended for analysis)
CLAUDE_API_KEY=your-anthropic-claude-api-key
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Option 2: OpenAI
# OPENAI_API_KEY=your-openai-api-key
# OPENAI_MODEL=gpt-4-turbo-preview

# Option 3: OpenRouter (multi-model gateway)
# OPENROUTER_API_KEY=your-openrouter-api-key
# OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
# APP_URL=https://yourdomain.com

# Microsoft Graph API (Outlook Integration)
# Register app at: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps/ApplicationsListBlade
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=common
MICROSOFT_REDIRECT_URI=http://localhost:4000/api/v1/microsoft/auth/callback

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:3000

# WebSocket Configuration
WS_CORS_ORIGIN=http://localhost:3000
WS_PING_INTERVAL=25000
WS_PING_TIMEOUT=20000

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/jedire.log

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
