# ================================
# JEDI RE Backend Environment Config
# ================================

# Server Configuration
NODE_ENV=production
PORT=3000
API_VERSION=v1

# Database Configuration (REQUIRED)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/jedire
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration (REQUIRED for caching & sessions)
REDIS_URL=redis://localhost:6379

# JWT Authentication (REQUIRED - Generate secure random strings)
JWT_SECRET=your-super-secret-jwt-key-CHANGE-THIS-TO-RANDOM-STRING
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-CHANGE-THIS-TO-RANDOM-STRING
JWT_REFRESH_EXPIRES_IN=30d

# Frontend URL (REQUIRED for OAuth redirects)
FRONTEND_URL=http://localhost:3000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# ================================
# External APIs (Configure as needed)
# ================================

# Google OAuth (for authentication)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_AUTH_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback

# Gmail Sync (optional)
GOOGLE_GMAIL_CALLBACK_URL=http://localhost:3000/api/v1/gmail/callback

# Google Maps API (for location services)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Mapbox (for mapping)
MAPBOX_ACCESS_TOKEN=your-mapbox-token

# Regrid API (for property data)
REGRID_API_KEY=your-regrid-api-key

# ================================
# LLM / AI Services (Choose ONE)
# ================================

# Option 1: Anthropic Claude (recommended)
CLAUDE_API_KEY=your-anthropic-claude-api-key
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Option 2: OpenAI (uncomment to use)
# OPENAI_API_KEY=your-openai-api-key
# OPENAI_MODEL=gpt-4-turbo-preview

# Option 3: OpenRouter (uncomment to use)
# OPENROUTER_API_KEY=your-openrouter-api-key
# OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# ================================
# Microsoft Graph API (Outlook - Optional)
# ================================
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=common
MICROSOFT_REDIRECT_URI=http://localhost:3000/api/v1/microsoft/auth/callback

# ================================
# WebSocket Configuration
# ================================
WS_CORS_ORIGIN=http://localhost:3000
WS_PING_INTERVAL=25000
WS_PING_TIMEOUT=20000

# ================================
# Logging & Monitoring
# ================================
LOG_LEVEL=info
LOG_FILE=logs/jedire.log

# ================================
# Rate Limiting
# ================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# Application Metadata (for health checks)
# ================================
APP_NAME=JEDI-RE
APP_VERSION=1.0.0
