run = "bash run.sh"
entrypoint = "run.sh"
modules = ["nodejs-20", "python-3.11", "postgresql-16"]

[nix]
channel = "stable-24_05"

[deployment]
run = ["bash", "-c", "cd backend && PORT=5000 NODE_ENV=production node dist/index.replit.js"]
deploymentTarget = "autoscale"
build = ["bash", "-c", "cd frontend && npm install && npx vite build && cd ../backend && npm install && npm run build"]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 4000
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "JediRe"

[[workflows.workflow]]
name = "JediRe"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./start.sh"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"
