[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "NODE_ENV=production PORT=5000 node backend/dist/index.replit.js"]
build = ["bash", "-c", "export NODE_OPTIONS='--max-old-space-size=2048' && cd frontend && npm install --legacy-peer-deps && npx vite build && cd ../backend && npx tsc --skipLibCheck"]
