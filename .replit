run = "bash run.sh"
entrypoint = "run.sh"
modules = ["nodejs-20", "python-3.12", "bash", "web", "postgresql-16"]

[nix]
channel = "stable-25_05"

[deployment]
run = ["node", "backend/dist/index.replit.js"]
deploymentTarget = "autoscale"
build = ["bash", "build.sh"]

[[ports]]
localPort = 4000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "JediRe"

[[workflows.workflow]]
name = "JediRe"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./start.sh"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[userenv]

[userenv.production]
PORT = "5000"
NODE_ENV = "production"

[userenv.shared]
MICROSOFT_REDIRECT_URI = "http://localhost:4000/api/v1/microsoft/auth/callback"
FRONTEND_URL = "http://localhost:3000"
