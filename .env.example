# ========================================
# JediRe - Replit Environment Variables
# ========================================
# Copy this to .env and fill in your values

# ========================================
# DATABASE (Required)
# ========================================
# Automatically set by Replit when you add PostgreSQL database
DATABASE_URL=postgresql://user:password@host:5432/dbname

# ========================================
# BACKEND CONFIGURATION
# ========================================
NODE_ENV=production
PORT=4000
API_VERSION=v1

# JWT Authentication
JWT_SECRET=change-this-to-a-long-random-secret-string
JWT_EXPIRES_IN=7d

# CORS (use * for development, specific domain for production)
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info

# WebSocket
WS_CORS_ORIGIN=*

# ========================================
# EXTERNAL APIs (Optional)
# ========================================

# Mapbox - For map visualization
# Get free token at: https://mapbox.com
MAPBOX_TOKEN=

# Claude AI - For AI-powered insights
# Get free credits at: https://console.anthropic.com
CLAUDE_API_KEY=

# Google Maps (Optional)
GOOGLE_MAPS_API_KEY=

# ========================================
# SUPPLY AGENT CONFIGURATION
# ========================================

# Markets to analyze (semicolon-separated)
# Format: "City, STATE;City, STATE;..."
MARKETS=Austin, TX;Denver, CO;Phoenix, AZ;Miami, FL;Seattle, WA

# Agent run frequency (minutes)
AGENT_RUN_INTERVAL_MINUTES=60

# Data collection
USE_MOCK_DATA=true
ENABLE_ZILLOW=false
ENABLE_REDFIN=false

# AI insights (requires CLAUDE_API_KEY)
ENABLE_AI_INSIGHTS=false

# ========================================
# FRONTEND CONFIGURATION
# ========================================

# API endpoint (relative path for Replit proxy)
VITE_API_URL=/api/v1
VITE_WS_URL=

# Mapbox token (same as above)
VITE_MAPBOX_TOKEN=

# Feature flags
VITE_ENABLE_MAPS=true
VITE_ENABLE_WEBSOCKET=true

# ========================================
# ADVANCED SETTINGS
# ========================================

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database pool
DB_POOL_MIN=2
DB_POOL_MAX=10

# ========================================
# DEVELOPMENT ONLY
# ========================================
# Uncomment for local development

# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=jedire
# DB_USER=postgres
# DB_PASSWORD=postgres
